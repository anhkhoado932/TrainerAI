# Required settings
OPENAI_API_KEY=your_openai_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# OpenAI Configuration
OPENAI_VISION_MODEL=gpt-4o-mini
OPENAI_VISION_MAX_TOKENS=500
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy

# Storage Configuration
STORAGE_DIR=storage

# Video Processing Configuration
ALLOWED_VIDEO_DOMAINS=supabase.co
DEFAULT_FRAME_SKIP=5
MAX_FRAME_SKIP=30
MIN_FRAME_SKIP=1
DANGER_ANGLE_THRESHOLD=60
POSE_MODEL=yolo11m-pose.pt
POSE_KEYPOINTS=12,14,16
POSE_LINE_WIDTH=4

# Circle indicator configuration
CIRCLE_OFFSET_X=-20
CIRCLE_RADIUS=40
CIRCLE_THICKNESS=3
DANGER_COLOR=0,0,255
NORMAL_COLOR=104,31,17

# Cleanup Configuration
CLEANUP_HOURS=24

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# HTTP Request Configuration
HTTP_TIMEOUT=30
HTTP_CHUNK_SIZE=8192 